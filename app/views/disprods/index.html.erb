    <div class="container">
      
      <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-12 col-md-9">
          <!--<p class="float-right hidden-md-up">-->
          <!--  <button type="button" class="btn btn-primary btn-sm" data-toggle="offcanvas">Toggle nav</button>-->
          <!--</p>-->
          <div class="jumbotron text-white" id="subpageHeader">
            <h1>Display</h1>
            <p>Put some text here</p>
            <div>
              <!--<div>-->
              <%= link_to "Upload An Art for Display", new_disprod_path, class: "btn btn-primary",style:"display:inline-block; margin-right:5%"%>
              <%= form_tag disprods_path,class:"tag",style:"display:inline-block",method: :get do %>
              <%= text_field_tag :search, params[:search], style:"display:inline-block",placeholder: "Search..." %>
              <%= submit_tag "Search", name: nil ,class: "btn btn-info btn-sm",style:"display:inline-block"%>
            <% end %>
            </div>            
          </div>
          
          <% @disprod.each_slice(3) do |i| %>
          <div class="row">
            <% i.each do |j| %>
            <div class="col-6 col-lg-4">
              <!--<h2>Heading</h2>-->
              <%= link_to j do %>
                <%= image_tag j.image.url(:medium), class:"itemImage" %>
              <% end %>
              <%= link_to j.dp_name, j, class:"itemName" %>
              <!--<p><a class="btn btn-secondary" href="#" role="button">View details &raquo;</a></p>-->
            </div><!--/span-->
            <% end %>
          </div><!--/row-->
          <% end %>
          
        </div><!--/span-->

        <div class="col-6 col-md-3 sidebar-offcanvas" id="sidebar">
          <div class="list-group">
            <a href="#" class="list-group-item active">CATEGORY</a>
            <a href="#" class="list-group-item">Category1</a>
            <a href="#" class="list-group-item">Category2</a>
            <a href="#" class="list-group-item">Category3</a>
            <a href="#" class="list-group-item">Category4</a>
            <a href="#" class="list-group-item">Category5</a>
            <a href="#" class="list-group-item">Category6</a>
          </div>
        </div><!--/span-->
      </div><!--/row-->

</div>





