<!DOCTYPE html>
<html>
  <div>
    <div>
      <%= link_to "Upload An Art for Display", new_disprod_path, class: "btn btn-primary"%>
    </div>
  <%= form_tag disprods_path,class:"tag",method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search..." %>
  <%= submit_tag "Search", name: nil %>
  <% end %>
  </div>  
  

  
  <% @disprod.each_slice(3) do |i| %>
    <div class="row">
      <% i.each do |j| %>
        <div class="col-md-4">
          <div class="disproduct">
            <div class="disimage">
              <%= link_to j do %>
                <%= image_tag j.image.url(:medium) %>
              <% end %>
            </div>
            <h2 class="h2">
              <%= link_to j.dp_name, j %>
            </h2>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</html>



<style type="text/css">
@media screen and (min-width: 901px) {
  .btn{margin-top:1%;margin-left:1%}
  .row{font:normal 100% Arial,sans-serif;font-size:1.4rem;padding-top:5%; } 
  .disimage{width:auto;text-align:center;}
  .h2{width:auto;text-align:center;}
  .form-signin-heading{padding-left: 20%;}
  .tag{position:absolute;padding-left:85%;padding-top:1%;}
  
}
@media screen and (max-width: 900px) {
  .body {font:normal 100% Arial,sans-serif;font-size:1.4rem; } 
  .form-signin-heading{padding-left: 10%;}
  .btn{margin-left:18%;text-align:center;margin-top:1%;margin-bottom:1%;}
  .disimage{width:auto;text-align:center;}
  .tag{padding-left:18%;padding-top:1%;margin-top:1%}
}
</style>

