<!--for display show-->
<!DOCTYPE html>
<html>
    <div class="body">
      <% provide(:title, @disprod.dp_name) %>
      <%= image_tag @disprod.image.url(:medium, class: "item_image") %>
      <h1><%= @disprod.dp_name %></h1>
      
      <p>
        <%= @disprod.desc %>
      </p>
      
      
      <%= link_to "Back", disprods_path, class: "btn btn-default" %>
      
      <% if current_user.id == @disprod.user_id %>
      <%= link_to "Edit", edit_disprod_path, class: "btn btn-default" %>
      <%= link_to "Delete", disprod_path, method: :delete,  data: { confirm: "Are you sure?"}, class: "btn btn-default" %>
      <% end %>
    </div>
</html>


<style>
@media screen and (min-width: 901px) {
  .body{width:auto;text-align:center;padding-top:5%;}
}

@media screen and (max-width: 900px) {
  .body{width:auto;text-align:center;padding-top:5%;}
  #.h1{width:auto;text-align:center;}
  #.item_image{margin-left:50%;}
}
</style>


